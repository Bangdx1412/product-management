extends ../../layouts/default.pug
include ../../mixins/alert.pug

block  main 
    +alert-errors(5000)
    .container.my-5
        .row.justify-content-center 
            .col-8 
                h1(class="text-center") Đăng ký tài khoản
                form(action="/user/register", method="post")
                    .form-group
                        label(for="fullName") Tên đăng nhập
                        input.form-control(type="text", name="fullName" id="fullName" placeholder="Tên đăng nhập" required)
                    .form-group
                        label(for="email") Email
                        input.form-control(type="email", name="email" id="email" placeholder="Email" required)
                    .form-group
                        label(for="password") Mật khẩu
                        input.form-control(type="password", name="password" id="password" placeholder="Mật khẩu" required)
                    button.btn.btn-primary(type="submit") Đăng ký