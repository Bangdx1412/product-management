
include ../mixins/submenu.pug
header.container
  .row.align-items-center
    .col-3
      .inner-logo
        a(href="/")
          img(src="/images/logo.webp", width="50%"  alt="Logo")
    .col-5
      form(action="/search", method="get"
      )
        div(class="form-group d-flex")
          input(type="text", name="keyword", class="form-control" value=keyword placeholder="Tìm kiếm sản phẩm")
          button(type="submit", class="btn btn-primary") Tìm
    .col-4
      .inner-menu
        ul
          li
            a(href="/") Trang chủ
          li
            -const pathProduct = "/products"
            a(href=`${pathProduct}`) Sản phẩm
              +sub-menu(layoutProductsCategory,pathProduct)