extends ../../layouts/default.pug
include ../../mixins/alert.pug

block  main 
    +alert-errors(5000)
    .container.my-5
        .row.justify-content-center 
            .col-8 
                h1(class="text-center") Đổi mật khẩu
                form(action="/user/password/reset", method="post")
                    .form-group
                        label(for="password") Mật khẩu mới
                        input.form-control(type="password" name="password"  id="password" placeholder="Mật khẩu mới" required)
                    .form-group
                        label(for="confirmPassword") Xác nhận mật khẩu
                        input.form-control(type="password" name="confirmPassword" id="confirmPassword" placeholder="Xác nhận mật khẩu" required)
                    button.btn.btn-primary.btn-block(type="submit") Đổi mật khẩu
                
                    
                    