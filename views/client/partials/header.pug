
include ../mixins/submenu.pug
header.container
  .row.align-items-center
    .col-3
      .inner-logo
        a(href="/")
          img(src="/images/logo.webp", width="50%"  alt="Logo")
    .col-4
      form(action="/search", method="get" class="form-inline")
        div(class="form-group d-flex")
          input(type="text", name="keyword", class="form-control" value=keyword placeholder="Tìm kiếm sản phẩm")
          button(type="submit", class="btn btn-primary") Tìm
    .col-4
      .inner-menu
        ul
          li
            a(href="/") Trang chủ
          li
            -const pathProduct = "/products"
            a(href=`${pathProduct}`) Sản phẩm
              +sub-menu(layoutProductsCategory,pathProduct)
          li 
            a(href="/cart") Cart (#{miniCart.totalQuantity? miniCart.totalQuantity : 0})
          if user
            li
              a(href="/user/info") #{user.fullName}
            li
              a(href="/user/logout") Đăng xuất
          else 
            li
              a(href="/user/login") Đăng nhập
            li
              a(href="/user/register") Đăng ký
         
            