extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
    +alert-success(3000)
    +alert-errors(3000)
    h1(class="mb-4") Edit
    form(action=`${prefixAdmin}/roles/edit/${data.id}?_method=PATCH`, method="post") 
        div(class="form-group")
            label(for="title") Title
            input(type="text"
            class="form-control"
            id="title"
            name="title"
            value=data.title
            required
            )
        div(class="form-group")
            label(for="desc") Description
            input(type="text"
            class="form-control"
            id="desc"
            name="description"
            value=data.description
            )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Update