extends ../../layouts/default.pug
include ../../mixins/box-head

block main 
  .container.my-3
    .row
      .col-12
        +box-head("Chi tiết sản phẩm")

    .row
      .col-md-6
        if product.thumbnail
          img.img-fluid.w-100.rounded(src=product.thumbnail, alt=product.title)
        else
          .alert.alert-warning Không có ảnh sản phẩm.

      .col-md-6
        h3= product.title

        if product.description && product.description.trim() !== ''
          p.text-muted.font-italic !{product.description}
        
        if product.price
          p.mt-3
            strong Giá: 
            |  $#{product.price}

        if product.discountPercentage && product.discountPercentage > 0
          p
            strong Giảm giá: 
            |  #{product.discountPercentage}%
        
        if product.stock && product.stock > 0
          p
            strong Còn lại: 
            |  #{product.stock} sản phẩm
        else
          p.text-danger Sản phẩm tạm hết hàng.

      
    .row.mt-4
      .col-12
        a.btn.btn-secondary(href='/products') Quay về trang sản phẩm
